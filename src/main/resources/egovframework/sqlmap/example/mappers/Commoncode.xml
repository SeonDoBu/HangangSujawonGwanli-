<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.sample.service.impl.CommoncodeMapper">

	<!-- big_code에 해당하는 commoncode 데이터 전부 혹은 일부만 가져올 때 by 나희-->
	<select id="searchList" parameterType="Commoncode" resultType="Commoncode">
		SELECT *
		FROM   commoncode
		WHERE  small_code != 999
		AND big_code = #{big_code}
		<if test="small_code != 0">
			AND small_code = #{small_code}
		</if>
	</select>
	
</mapper>